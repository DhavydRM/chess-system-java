{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Java (para bin)",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "bin",
                "${workspaceFolder}/src/application/*.java",
                "${workspaceFolder}/src/boardgame/*.java",
                "${workspaceFolder}/src/chess/*.java",
                "${workspaceFolder}/src/chess/pieces/*.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$javac"
        }
    ]
}
